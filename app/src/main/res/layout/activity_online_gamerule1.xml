<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="395dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_container">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title"
        android:text="게임 방법"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_gothic_bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/nanum_gothic"
        android:text="1/3"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        />

    <TextView
        android:id="@+id/et_gameroom_id"
        android:layout_width="368dp"
        android:layout_height="236dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_edittext"
        android:hint="'서로알기 윷놀이'는 기본 윷놀이에 간단한
질의응답을 더한 게임입니다.\n\n웇을 던져서 윷가락 결과에 따라 '말'을 이동하여
도착지에 제일 먼저 도착하는 플레이어가 승리합니다."
        android:fontFamily="@font/nanum_gothic"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="142dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/dialog_btn_cancel"
        android:text="닫기"
        android:textSize="16sp"
        android:fontFamily="@font/nanum_gothic_bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_enter"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_gameroom_id"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="142dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/dialog_btn_enter"
        android:text="다음"
        android:textSize="16sp"
        android:fontFamily="@font/nanum_gothic_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"
        app:layout_constraintTop_toBottomOf="@+id/et_gameroom_id"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>