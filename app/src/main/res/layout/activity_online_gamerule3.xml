<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="395dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_container">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_title"
        android:text="게임 방법"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/nanum_gothic_bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/nanum_gothic"
        android:text="3/3"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        />

    <TextView
        android:id="@+id/et_gameroom_id"
        android:layout_width="368dp"
        android:layout_height="236dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_edittext"
        android:fontFamily="@font/nanum_gothic"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nanum_gothic"
        android:text="말을 놓는 방법은 윷을 던진 후,\n윷판 상단에 위치한 윷버튼을 누르고"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/et_gameroom_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        />


    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rule_yut"
        app:layout_constraintStart_toStartOf="@id/et_gameroom_id"
        app:layout_constraintEnd_toEndOf="@id/et_gameroom_id"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintBottom_toTopOf="@+id/text2"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_gothic"
        android:text = "좌측 하단 말 추가하기 버튼을 누르거나\n윷판에 놓인 말을 눌러 이동시킬 수 있습니다."
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/et_gameroom_id"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintBottom_toBottomOf="@+id/et_gameroom_id"/>

    <Button
        android:id="@+id/btn_cancel_2"
        android:layout_width="142dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/dialog_btn_cancel"
        android:text="닫기"
        android:textSize="16sp"
        android:fontFamily="@font/nanum_gothic_bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_pre"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_gameroom_id"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/btn_pre"
        android:layout_width="142dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/dialog_btn_enter"
        android:text="이전"
        android:textSize="16sp"
        android:fontFamily="@font/nanum_gothic_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel_2"
        app:layout_constraintTop_toBottomOf="@+id/et_gameroom_id"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>