<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_container">


    <TextView
        android:id="@+id/tv_make_game_room_title"
        android:layout_width="416dp"
        android:layout_height="60dp"
        android:background="@drawable/dialog_title"
        android:fontFamily="@font/nanum_gothic_bold"
        android:gravity="center"
        android:text="방 만들기"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.038"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    1P 이름 입력칸 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_nickname"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_make_game_room_title"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/Player1_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1P"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/name_1P_OG"
            android:layout_width="280dp"
            android:layout_height="57dp"
            android:background="@drawable/dialog_edittext"
            android:fontFamily="@font/nanum_gothic"
            android:hint="1p 이름 입력해주세요"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Player1_TextView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  말 개수 설정칸 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_mal_num"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_nickname"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_mal_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="말 개수"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_mal_count"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_mal_num_title">

            <Button
                android:id="@+id/btn_mal_minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dialog_btn_cancel"
                android:fontFamily="@font/nanum_gothic_bold"
                android:text="-"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_mal_num"/>

            <TextView
                android:id="@+id/tv_mal_num"
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:background="@drawable/dialog_edittext"
                android:fontFamily="@font/nanum_gothic"
                android:textSize="16sp"
                android:text="4"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_mal_minus"
                app:layout_constraintEnd_toStartOf="@+id/btn_mal_plus"/>

            <Button
                android:id="@+id/btn_mal_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/dialog_btn_cancel"
                android:fontFamily="@font/nanum_gothic_bold"
                android:text="+"
                android:textSize="16sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_mal_num"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  질문 카테고리 설정칸 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_relationship"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_mal_num"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관계"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/rg_category"
            android:layout_width="280dp"
            android:layout_height="54dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_btn"
                android:button="@null"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp"
                android:text="연인"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_btn"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp"
                android:text="부부"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_btn"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp"
                android:text="부모자녀"
                android:textColor="@color/white"/>
            <!--끝 쪽으로 배치-->

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--  질문 카테고리 설정칸 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_adult"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_relationship"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/relationTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성인질문"
            android:textColor="#000000"
            android:textIsSelectable="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/rg_adult"
            android:layout_width="280dp"
            android:layout_height="54dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relationTextView2">

            <RadioButton
                android:id="@+id/onRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_btn"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp"
                android:text="OFF"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/offRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_radio_btn"
                android:button="@null"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="6dp"
                android:text="ON"
                android:textColor="@color/white"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_confirm_btn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_adult">

        <Button
            android:id="@+id/noButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_btn_cancel"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="취소"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/makeRoomButton"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/makeRoomButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_btn_enter"
            android:fontFamily="@font/nanum_gothic_bold"
            android:text="방 만들기"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/noButton"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
